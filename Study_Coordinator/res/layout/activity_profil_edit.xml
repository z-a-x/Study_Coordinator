<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"    
    android:orientation="vertical"
    
    >
 
    <ImageView
        android:id="@+id/frag_profil_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
      />
 
    <TextView
        android:id="@+id/frag_profil_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:textAppearance="?android:attr/textAppearanceLarge" 
       />
   	<ImageView         
        android:id="@+id/frag_profil_profil_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="20dp"        
       	/>       
    <LinearLayout
        android:layout_marginLeft="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView 
            
            android:id="@+id/frag_profil_edit_name_tv" 		            
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="12dp"
	        android:textSize="20sp"
	        android:text="@string/name"
            />
        <EditText 
		        android:id="@+id/frag_profil_edit_name_et" 		            
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_marginTop="12dp"
		        android:textSize="20sp"     
		        />        
    </LinearLayout>
    <LinearLayout
        android:layout_marginLeft="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
		        android:id="@+id/frag_profil_edit_surname_tv"                
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_marginTop="12dp"
		        android:textSize="20sp"
		        android:text="@string/surname"        
		        />
        <EditText
		        android:id="@+id/frag_profil_edit_surname_et"                
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_marginTop="12dp"
		        android:textSize="20sp"		                
		        />
        
    </LinearLayout>
	<LinearLayout
	    android:layout_marginLeft="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
         <TextView
		        android:id="@+id/frag_profil_edit_email_tv"         			        
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_marginTop="12dp"
		        android:textSize="20sp"
		        android:text="@string/mail"        
		        />
         <EditText
		        android:id="@+id/frag_profil_edit_email_et"         			        
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_marginTop="12dp"
		        android:textSize="20sp"
		        />
        	    	
        
        </LinearLayout>
        <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <Button             
        	android:id="@+id/profil_editprofile_bt"		        
       		android:layout_width="wrap_content"
       		android:layout_height="wrap_content"     
       		android:width="180dp"  		
       		android:layout_centerHorizontal="true"
       		
       		android:onClick="editProfil"
       		android:text="@string/editProfil"
    		android:textColor="@android:color/black"
    		android:background="@drawable/singin"
    		android:layout_marginTop="45dp"
    		
    		
    		  		       
        />
        </RelativeLayout>

		    
		   
    
</LinearLayout>
